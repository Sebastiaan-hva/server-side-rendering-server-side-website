    {% for product in data %}
        <li>
            {% comment %} <p>Slug: {{ product.slug }}</p>  {% endcomment %}
            
            {% comment %} <a href="/gifts/{{ product.slug }}">
                <h2>{{ product.title }}</h2>
            </a> {% endcomment %}

            <button class="grid-save"><img id="grid-save" src="/assets/save-icon.png" alt="save button"></button>
            <a href="/gifts/{{ product.slug }}"  alt="{{ product.title }}">
            <button class="grid-image" alt="{{ product.title }} button">
                <img  src="{{ product.image }}" alt="{{ product.title }}">
            </button>
            </a>
            <p>{{ product.name }}</p>
        </li>
    {% endfor %}
